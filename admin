  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Administration - VinnyWorld</title>
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <!-- Header Admin -->
  <header>
    <div class="logo">VinnyWorld Admin</div>
    <nav>
      <ul>
        <li><a href="index.html">Retour à l'accueil</a></li>
      </ul>
    </nav>
  </header>

  <!-- Admin Content -->
  <main>
    <section class="admin-section">
      <h1>Gestion des événements</h1>
      <p>Ajoutez, modifiez ou supprimez des événements ici.</p>

      <!-- Formulaire pour ajouter un événement -->
      <form id="eventForm">
        <div class="form-group">
          <label for="eventName">Nom de l'événement</label>
          <input type="text" id="eventName" name="eventName" placeholder="Exemple: Soirée d'ouverture" required />
        </div>

        <div class="form-group">
          <label for="eventDate">Date de l'événement</label>
          <input type="date" id="eventDate" name="eventDate" required />
        </div>

        <div class="form-group">
          <label for="eventLocation">Lieu de l'événement</label>
          <input type="text" id="eventLocation" name="eventLocation" placeholder="Exemple: Salle VinnyWorld" required />
        </div>

        <div class="form-group">
          <label for="eventDescription">Description de l'événement</label>
          <textarea id="eventDescription" name="eventDescription" placeholder="Détails de l'événement..." required></textarea>
        </div>

        <div class="form-group">
          <label for="eventImage">Image de l'événement</label>
          <input type="file" id="eventImage" name="eventImage" accept="image/*" />
        </div>

        <button type="submit">Ajouter l'événement</button>
      </form>

      <!-- Liste des événements -->
      <section class="event-list">
        <h2>Événements existants</h2>
        <div id="eventContainer">
          <!-- Liste des événements sera ajoutée dynamiquement -->
        </div>
      </section>
    </section>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 VinnyWorld. Tous droits réservés.</p>
  </footer>

  <script>
    const eventForm = document.getElementById('eventForm');
    const eventContainer = document.getElementById('eventContainer');

    let events = [];

    eventForm.addEventListener('submit', function (e) {
      e.preventDefault();

      const eventName = document.getElementById('eventName').value;
      const eventDate = document.getElementById('eventDate').value;
      const eventLocation = document.getElementById('eventLocation').value;
      const eventDescription = document.getElementById('eventDescription').value;
      const eventImage = document.getElementById('eventImage').files[0];

      // Crée un objet pour le nouvel événement
      const newEvent = {
        name: eventName,
        date: eventDate,
        location: eventLocation,
        description: eventDescription,
        image: eventImage ? URL.createObjectURL(eventImage) : '',
      };

      // Ajoute l'événement au tableau d'événements
      events.push(newEvent);
      displayEvents();

      // Réinitialise le formulaire
      eventForm.reset();
    });

    function displayEvents() {
      eventContainer.innerHTML = '';

      events.forEach((event, index) => {
        const eventCard = document.createElement('div');
        eventCard.classList.add('event-card');
        eventCard.innerHTML = `
          <img src="${event.image}" alt="${event.name}" />
          <h3>${event.name}</h3>
          <p>${event.date}</p>
          <p>${event.location}</p>
          <p>${event.description}</p>
          <button onclick="removeEvent(${index})">Supprimer</button>
        `;
        eventContainer.appendChild(eventCard);
      });
    }

    function removeEvent(index) {
      events.splice(index, 1);
      displayEvents();
    }
  </script>
</body>
</html>
